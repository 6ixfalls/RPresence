    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
	    "skipLibCheck": true,
        "esModuleInterop": true
